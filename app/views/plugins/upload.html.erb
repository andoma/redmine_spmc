
<% if(!@result.nil?) && @result['error'] %>
<h2>Ingest failed:</h2>
<pre style="background-color:#ff6666; border:2px; border-color:black; border-style:solid; padding: 5px; color:black">
  <%= @result['result'] %>
</pre>
<% end %>

<h2>Upload plugin package</h2>

<div class="box">

<%= form_tag({action: :upload}, multipart: true) do %>

<label for='archive' style="width: 250px; display:inline-block;">Upload ZIP archive here :</label>
<%= file_field_tag 'archive' %>
<br>
<label for='url' style="width: 250px; display:inline-block;">Or specify URL to download from :</label>
<%= text_field_tag :url, '', size: 100 %>
<br>
<%= submit_tag "Ingest" %>
<% end %>

</div>


<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'spmc', :plugin => 'redmine_spmc' %>
<% end %>

<%= render :partial => 'sidebar' %>
